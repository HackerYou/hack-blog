<header class='main-header'>
	<h1>
    <%= link_to 'Rails Hack Blog', posts_path, class: "branding"%>
  </h1>
  <div class="search">
    <%= form_tag posts_search_path, method: :get do %>
      <%= text_field_tag :q, params[:q], placeholder: 'search', class: 'searchField' %>
      <%= submit_tag 'Search', class: "button" %>
    <% end %>
  </div>
</header>
